<h1>{{titulo}}</h1>

<form method="POST" action="/productos/editar/{{producto.id}}?_method=PUT">
  <label>Nombre
    <input name="nombre" value="{{producto.nombre}}" required>
  </label>

  <label>Precio
    <input name="precio" type="number" step="0.01" min="0" value="{{producto.precio}}" required>
  </label>

  <label>Stock
    <input name="stock" type="number" min="0" value="{{producto.stock}}" required>
  </label>

  <button class="btn" type="submit">Guardar</button>
  <a class="btn" href="/productos/admin">Cancelar</a>
</form>
